@model DA1.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div style="margin-left:50px; padding-top:100px;  max-width:1170px; padding-bottom:100px">
    <h1 style="text-decoration: none; text-transform: uppercase; font-size: 70px; font-weight: 800; ">Delete</h1>

    <h3 style="font-weight: 600; line-height: 5px;">Are you sure you want to delete this?</h3>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #1cc88a!important;">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10" style="padding:20px">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #ff00dc!important;">
                @Html.DisplayNameFor(model => model.ProductQuantity)
            </dt>
            <dd class="col-sm-10" style="padding:20px">
                @Html.DisplayFor(model => model.ProductQuantity)
            </dd>
            <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #ff0000!important;">
                @Html.DisplayNameFor(model => model.ProductImage)
            </dt>
            <dd class="col-sm-10" style="padding:20px">
                <img src="~/Img/model/@Html.DisplayFor(model => model.ProductImage)" />
            </dd>
            <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #00ffff!important;">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </dt>
            <dd class="col-sm-10" style="padding:20px">
                @Html.DisplayFor(model => model.ProductPrice)
            </dd>
            <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #ff6a00!important;">
                @Html.DisplayNameFor(model => model.Discount)
            </dt>
            <dd class="col-sm-10" style="padding:20px">
                @Html.DisplayFor(model => model.Discount)
            </dd>
            <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #4800ff!important;">
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd class="col-sm-10" style="padding:20px">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>
            <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #ff6a00!important;">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10" style="padding:20px">
                @Html.DisplayFor(model => model.Category.CategoryID)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

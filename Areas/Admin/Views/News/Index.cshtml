@model IEnumerable<DA1.Models.Domain.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

    <div style="margin-left:50px; padding-top:100px">

        <h1 style="text-decoration: none; text-transform: uppercase; font-size: 70px; font-weight: 800; ">News</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #1cc88a!important;">
                        @Html.DisplayNameFor(model => model.NewsID)
                    </th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #1cc88a!important;">
                        @Html.DisplayNameFor(model => model.NewsImage)
                    </th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #ff00dc!important;">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #ff0000!important;">
                        @Html.DisplayNameFor(model => model.Sub_content)
                    </th>
                    <th style="border:none;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td style="vertical-align: middle; border: 1px solid #e5e5e5; ">
                        @Html.DisplayFor(modelItem => item.NewsID)
                    </td>
                    <td style="vertical-align: middle; border: 1px solid #e5e5e5; ">
                        <img style="max-width: 200px; max-height:300px" src="/Img/news/@item.NewsImage" />
                    </td>
                    <td style="vertical-align: middle; border: 1px solid #e5e5e5; ">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td style="vertical-align: middle; border: 1px solid #e5e5e5; ">
                        @Html.DisplayFor(modelItem => item.Sub_content)
                    </td>
                    <td style="vertical-align:middle; border:none">
                        <a asp-action="Edit" asp-route-id="@item.NewsID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.NewsID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.NewsID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
@model DA1.Models.Domain.CategoryProduct

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}
    <div style="margin-left:50px; padding-top:100px;  max-width:1170px; padding-bottom:100px">
        <h1 style="text-decoration: none; text-transform: uppercase; font-size: 70px; font-weight: 800; ">Delete</h1>

        <h3 style="font-weight: 600; line-height: 5px;">Are you sure you want to delete this?</h3>
        <div>
            <form style="color: #333333">
                <table style="margin-top: 25px; padding:20px; font-size:12px">
                    <tr>
                        <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #1cc88a!important;">  @Html.DisplayNameFor(model => model.CategoryID)</th>
                        <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #1cc88a!important;"> @Html.DisplayNameFor(model => model.CategoryName)</th>

                    </tr>
                    <tr>
                        <td style="padding:20px; border: 1px solid #e5e5e5;">
                            @Html.DisplayFor(model => model.CategoryID)
                        </td>
                        <td style="padding:20px; border: 1px solid #e5e5e5;">
                            @Html.DisplayFor(model => model.CategoryName)
                        </td>
                    </tr>
                </table>
            </form>
            <form asp-action="Delete">
                <input type="hidden" asp-for="CategoryID" />
                <div class="form-group" style="padding-top:2.5em">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
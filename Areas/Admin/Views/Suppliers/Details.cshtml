@model DA1.Models.Domain.Supplier

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

    <div style="margin-left:50px; padding-top:100px;  max-width:1170px; padding-bottom:100px">

        <h1 style="text-decoration: none; text-transform: uppercase; font-size: 70px; font-weight: 800; ">Detail</h1>

        <div>
            <h4>Supplier</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #1cc88a!important;">
                    @Html.DisplayNameFor(model => model.SupplierName)
                </dt>
                <dd class="col-sm-10" style="padding:20px">
                    @Html.DisplayFor(model => model.SupplierName)
                </dd>
                <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #ff00dc!important;">
                    @Html.DisplayNameFor(model => model.Adress)
                </dt>
                <dd class="col-sm-10" style="padding:20px">
                    @Html.DisplayFor(model => model.Adress)
                </dd>
                <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #ff0000!important;">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10" style="padding:20px">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2" style="padding:20px; border-left: .25rem solid #ff6a00!important;">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10" style="padding:20px">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.SupplierID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
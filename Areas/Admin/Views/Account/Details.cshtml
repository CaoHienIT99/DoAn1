@model DA1.Models.Domain.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Details</h1>

<div style="margin-left:50px; padding-top:100px;  max-width:1170px; padding-bottom:100px">

    <h1 style="text-decoration: none; text-transform: uppercase; font-size: 70px; font-weight: 800; ">Detail</h1>

    <div>
        <form style="color: #333333">
            <table style="margin-top: 25px; padding:20px; font-size:12px">
                <tr>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #1cc88a!important;">User Name</th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #ff0000!important">Password</th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #00ffff!important">Full Name</th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #ff6a00!important">Address</th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #4800ff!important">Email</th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #ff00dc!important">Phone</th>
                    <th style="padding:20px; border: 1px solid #e5e5e5; border-top: .25rem solid #ff6a00!important">Status</th>
                </tr>
                <tr>
                    <td style="padding:20px; border: 1px solid #e5e5e5;">
                        @Html.DisplayFor(model => model.Username)
                    </td>
                    <td style="padding:20px; border: 1px solid #e5e5e5;">
                        @Html.DisplayFor(model => model.pass)
                    </td>
                    <td style="padding:20px; border: 1px solid #e5e5e5;">
                        @Html.DisplayFor(model => model.Fullname)
                    </td>
                    <td style="padding:20px; border: 1px solid #e5e5e5;">
                        @Html.DisplayFor(model => model.Adress)
                    </td>
                    <td style="padding:20px; border: 1px solid #e5e5e5;">
                        @Html.DisplayFor(model => model.Email)
                    </td>
                    <td style="padding:20px; border: 1px solid #e5e5e5;">
                        @Html.DisplayFor(model => model.Phone)
                    </td>
                    <td style="padding:20px; border: 1px solid #e5e5e5;">
                        @Html.DisplayFor(model => model.Position)
                    </td>
                </tr>
            </table>
            <div class="form-group" style="padding-top:2.5em">
                <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-primary">Edit</a>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>

</div>


<section class="contact spad" style="padding-top: 100px; padding-bottom: 100px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__text" style="margin-bottom:30px;">
                    <div class="section-title" style="text-align: left; margin-bottom: 36px;">
                        <h2 style="color: #353535; font-size:40px; font-weight: 700; margin-top: 5px; margin-bottom: 16px; margin: 0;">Let’s Work Together</h2>
                        <p style="margin-bottom:0; font-size: 17px; color:#727171; font-weight: 400; line-height: 25px; margin: 0 0 15px 0;">To make requests for further information, contact us via our social channels.</p>
                    </div>
                    <ul style="padding: 0; margin: 0;">
                        <li style="font-size:15px; color: #353535; line-height: 36px; list-style:none">
                            <span style="color: #727171; width: 85px; display: inline-block">
                                Weekday
                            </span> 08:00 am to 18:00 pm
                        </li>
                        <li style="font-size:15px; color: #353535; line-height: 36px; list-style:none">
                            <span style="color: #727171; width: 85px; display: inline-block">
                                Saturday:
                            </span> 10:00 am to 16:00 pm
                        </li>
                        <li style="font-size:15px; color: #353535; line-height: 36px; list-style:none">
                            <span style="color: #727171; width: 85px; display: inline-block">
                                Sunday:
                            </span> Closed
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <form novalidate action="coinguyen8gsd@gmail.com" name="frm" method="post">
                    <div class="form-group has-feedback">
                        <label class="sr-only">First name:</label>
                        <input type="text" name="name" class="form-control" placeholder="First name" required>

                    </div>
                    <div class="form-group has-feedback">
                        <label class="sr-only">Last name:</label>
                        <input type="text" name="surname" class="form-control" placeholder="Last name" required>

                    </div>
                    <div class="form-group has-feedback">
                        <label class="sr-only">Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="Email" required>

                    </div>
                    <div class="form-group">
                        <label class="sr-only" name="comment" for="comment">Comment:</label>
                        <textarea class="form-control" rows="5" id="comment" placeholder="Description"></textarea>
                    </div>
                    <div class="contact-buttons pull-left">
                        <input type="submit" name="submit" value="Send" style="font-size:15px; color: #ffffff; font-weight: 700; display: inline-block; padding: 15px 35px 12px 38px; background: #db2d2e; border: none; border-radius: 2px;" />
                        <input type="reset" value="Reset" style="font-size:15px; color: #ffffff; font-weight: 700; display: inline-block; padding: 15px 35px 12px 38px; background: #db2d2e; border: none; border-radius: 2px;" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

